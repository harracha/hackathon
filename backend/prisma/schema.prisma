generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  info         Json
  email        String
  password     String
  userRole     UserRole
  avatar       String?
  googleUserId String?
  device       Device[]
}

model Device {
  id         String       @id @default(uuid())
  name       String
  quarantine Threat[]
  userId     String
  user       User         @relation(fields: [userId], references: [id])
  status     DeviceStatus
  connection Connection[]
}

model Threat {
  id       String     @id @default(uuid())
  device   Device     @relation(fields: [deviceId], references: [id])
  deviceId String
  type     ThreatType
  info     Json
}

model Connection {
  id               String           @id @default(uuid())
  device           Device[]
  connectionStatus ConnectionStatus
  connectionType   ConnectionType
  req              Req[]
  res              Res[]
}

model Req {
  id               String     @id @default(uuid())
  connection       Connection @relation(fields: [connectionId], references: [id])
  connectionId     String
  senderDeviceId   String
  receiverDeviceId String
  reqExpress       Json
}

model Res {
  id               String     @id @default(uuid())
  connection       Connection @relation(fields: [connectionId], references: [id])
  connectionId     String
  senderDeviceId   String
  receiverDeviceId String
  resExpress       Json
}

enum UserRole {
  PENDING
  DEFAULT
  ADMIN
  SUPERADMIN
}

enum DeviceStatus {
  ONLINE
  OFFLINE
  ARCHIVED
}

enum ThreatType {
  HIGH
  MEDIUM
  LOW
}

enum ConnectionType {
  INNER
  OUTER
}

enum ConnectionStatus {
  ACTIVE
  ARCHIVED
  FLAGGED
}
