generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String
  avatar       String?
  googleUserId String?
  info         Json
  password     String
  userRole     UserRole
  devices      Device[]
}

model Device {
  id         String       @id @default(uuid())
  name       String
  userId     String
  status     DeviceStatus
  user       User         @relation(fields: [userId], references: [id])
  quarantine Threat[]
}

model Threat {
  id       String     @id @default(uuid())
  deviceId String
  type     ThreatType
  device   Device     @relation(fields: [deviceId], references: [id])
}

enum UserRole {
  DEFAULT
  ADMIN
  SUPERADMIN
}

enum DeviceStatus {
  ACTIVE
  ARCHIVED
}

enum ThreatType {
  HIGH
  MEDIUM
  LOW
}
