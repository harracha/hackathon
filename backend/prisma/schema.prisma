// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  info Json
  email String
  password String
  userRole UserRole
  avatar String?
  googleUserId String?
  device Device[]
}

model Device {
  id String @id @default(uuid())
  name String
  quarantine Threat[]
  userId String
  user User @relation(fields: [userId], references: [id])
  status DeviceStatus
}

model Threat {
  id String @id @default(uuid())
  device Device @relation(fields: [deviceId], references: [id])
  deviceId String
  type ThreatType
}

enum UserRole {
  DEFAULT
  ADMIN
  SUPERADMIN
}

enum DeviceStatus {
  ACTIVE
  ARCHIVED
}

enum ThreatType {
  HIGH
  MEDIUM
  LOW
}
